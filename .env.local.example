# ==========================================
# Frontend Configuration
# ==========================================

# WalletConnect Project ID (Required)
# Get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Smart Contract Addresses
# Deploy contracts and add addresses here
NEXT_PUBLIC_CONTRACT_ADDRESS_MAINNET=
NEXT_PUBLIC_CONTRACT_ADDRESS_SEPOLIA=
NEXT_PUBLIC_CONTRACT_ADDRESS_POLYGON=
NEXT_PUBLIC_CONTRACT_ADDRESS_BSC=

# Mock Mode (defaults to true if no contract address is set)
# Set to "false" to use real blockchain interactions
NEXT_PUBLIC_USE_MOCKS=true

# ==========================================
# Smart Contract Deployment (Backend)
# ==========================================

# Private Key for Contract Deployment
# NEVER commit this to version control
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth.public-rpc.com
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Block Explorer API Keys for Contract Verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key

# ==========================================
# Optional Configuration
# ==========================================

# Platform Fee Percentage (default: 5)
PLATFORM_FEE_PERCENT=5

# Minimum Raffle Duration (default: 3600 seconds = 1 hour)
MIN_RAFFLE_DURATION=3600

